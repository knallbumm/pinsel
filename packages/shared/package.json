{
  "name": "@pinsel/shared",
  "description": "The shared part of pinsel",
  "version": "0.0.1",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist/ && rollup --config rollup.config.ts --configPlugin typescript",
    "lint": "eslint . --ext .ts",
    "lint:files": "eslint --ext .ts --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --noEmit -p .",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@rollup/plugin-typescript": "^10.0.1",
    "typescript": "^4.9.3"
  }
}
