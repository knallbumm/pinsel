{
  "name": "pinsel",
  "description": "A lightweight, framework agnostic 2D drawing libary with focus on performance and developer experience.",
  "version": "0.0.7",
  "type": "module",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Luis Q. Haitzer"
  },
  "repository": {
    "url": "https://github.com/knallbumm/pinsel"
  },
  "homepage": "https://github.com/knallbumm/pinsel#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsc && cp ../../README.md ./dist/README.md",
    "rollup-build": "rimraf dist/ && rollup --config rollup.config.ts --configPlugin typescript",
    "lint": "eslint . --ext .ts",
    "lint:files": "eslint --ext .ts --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --noEmit -p ."
  },
  "dependencies": {
    "@pinsel/core": "workspace:*",
    "@pinsel/renderer": "workspace:*"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.3"
  }
}
