{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "importsNotUsedAsValues": "error",
    "outDir": "dist/"
  },
  "include": ["vite-env.d.ts", "packages/**/*.ts"],
  "exclude": ["packages/*/rollup.config.ts", "packages/**/*.test.ts"]
}
